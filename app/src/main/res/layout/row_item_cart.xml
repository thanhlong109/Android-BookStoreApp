<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">
    <ImageView
        android:id="@+id/imageViewBookCover"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Adult Narrative"
                android:textColor="#757575"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/buttonRemoveItem"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Remove item"
                android:src="@drawable/ic_close" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewBookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, Dream"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/textViewBookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cristina Camarena, Lady Desatia"
            android:textSize="14sp"
            android:textColor="#757575"
            android:paddingTop="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/buttonDecreaseQuantity"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_remove"
                    android:contentDescription="Decrease quantity" />

                <TextView
                    android:id="@+id/textViewQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="1"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/buttonIncreaseQuantity"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_add"
                    android:contentDescription="Increase quantity" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewBookPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="100,000VND"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>